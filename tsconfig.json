{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "types": ["react", "jest"],

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
